<h1>Posts</h1>

<% if @posts.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <% if user_signed_in? %>
        <th>Author</th>
        <th>Created Date</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% for post in @posts %>
      <tr>
        <% if user_signed_in? %>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= link_to post.user.username, profile_path(post.user) %></td>
          <td><%= post.created_at %></td>
        <% else %>
          <td><%= post.title %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No posts found.</p>
<% end %>
